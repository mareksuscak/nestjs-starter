{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "typecheck": "tsc --pretty --noEmit",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "repl": "nest start repl",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "pretest": "MIKRO_ORM_ENV=.env.test npx mikro-orm schema:drop --drop-migrations-table --run && MIKRO_ORM_ENV=.env.test npx mikro-orm migration:fresh --seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage --reporters=default --reporters=jest-junit --detectOpenHandles",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/api/test/jest-e2e.json --detectOpenHandles",
    "prepare": "husky install",
    "orm": "npx mikro-orm",
    "cmd": "CLI_PATH=apps/api/src/cli.ts npx nestjs-command"
  },
  "dependencies": {
    "@fastify/helmet": "^10.0.2",
    "@fastify/static": "^6.5.0",
    "@mikro-orm/core": "^5.4.2",
    "@mikro-orm/migrations": "^5.4.2",
    "@mikro-orm/nestjs": "^5.1.2",
    "@mikro-orm/postgresql": "^5.4.2",
    "@mikro-orm/reflection": "^5.4.2",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/platform-fastify": "^9.2.0",
    "@nestjs/platform-socket.io": "^9.2.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/swagger": "^6.1.2",
    "@nestjs/terminus": "^9.1.2",
    "@nestjs/websockets": "^9.2.0",
    "@socket.io/redis-adapter": "^8.1.0",
    "@willsoto/nestjs-prometheus": "^5.1.1",
    "bull": "^4.9.0",
    "cache-manager": "^5.1.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "husky": "^8.0.2",
    "lodash": "^4.17.21",
    "nestjs-command": "^3.1.2",
    "nestjs-pino": "^3.1.1",
    "nodemailer": "^6.9.1",
    "pino-http": "^8.2.0",
    "prom-client": "^14.2.0",
    "redis": "^4.5.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^5.4.2",
    "@mikro-orm/seeder": "^5.4.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/bull": "^4.10.0",
    "@types/cron": "^2.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "^18.11.9",
    "@types/nodemailer": "^6.4.7",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "29.5.0",
    "jest-junit": "^16.0.0",
    "jest-watch-typeahead": "^2.2.0",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.1.0",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.0.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/core(|/.*)$": "<rootDir>/libs/core/src/$1"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "jest-junit": {
    "outputDirectory": "test-results",
    "outputName": "./jest.xml",
    "classNameTemplate": "{classname}-{title}",
    "addFileAttribute": "true"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./libs/core/src/database/mikro-orm.config.ts",
      "./dist/libs/core/src/database/mikro-orm.config.js"
    ]
  }
}
