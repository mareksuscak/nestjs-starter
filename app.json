{
  "name": "nestjs-starter",
  "env": {
      "BACKGROUND_COLOR": {
          "description": "specify a css color",
          "value": "#fefefe",
          "required": false
      },
      "TITLE": {
          "description": "title for your site"
      },
      "APP_SECRET": {
          "generator": "secret"
      },
      "ORDERED_ENV": {
          "description": "control the order env variables are prompted",
          "order": 100
      }
  },
  "options": {
      "allow-unauthenticated": false,
      "memory": "512Mi",
      "cpu": "1",
      "port": 80,
      "http2": false,
      "concurrency": 80,
      "max-instances": 10
  },
  "build": {
      "skip": false,
      "buildpacks": {
          "builder": "some/builderimage"
      }
  },
  "hooks": {
      "prebuild": {
          "commands": [
              "./my-custom-prebuild"
          ]
      },
      "postbuild": {
          "commands": [
              "./my-custom-postbuild"
          ]
      },
      "precreate": {
          "commands": [
              "echo 'test'"
          ]
      },
      "postcreate": {
          "commands": [
              "./setup.sh"
          ]
      }
  }
}
